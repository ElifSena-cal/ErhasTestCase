@{
    Layout = null; // This will remove the layout for this view
}
@using Entities.Identity
@model AppUser

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .profile-card {
            text-align: center;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .profile-img {
            border-radius: 50%;
        }

        .profile-name {
            margin-top: 15px;
            font-size: 1.5em;
            font-weight: bold;
        }

        .profile-email {
            color: #6c757d;
        }

        .profile-info {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-card">
                    <img src="https://via.placeholder.com/150" alt="Profile Picture" class="profile-img img-fluid">
                    <h2 class="profile-name">@Model.FirstName @Model.LastName</h2>
                    <p class="profile-email">@Model.Email</p>
                </div>
            </div>
            <div class="col-md-8">
                <div class="profile-info">
                    <h3>Hesabım</h3>

                    <div class="form-group">
                        <label for="name">Ad</label>
                        <input type="text" class="form-control" id="name" asp-for="@Model.FirstName">
                    </div>
                    <div class="form-group">
                        <label for="surname">Soyad</label>
                        <input type="text" class="form-control" id="LastName" asp-for="@Model.LastName">
                    </div>
                    <div class="form-group">
                        <label for="email">E-Mail</label>
                        <input type="email" class="form-control" id="email" asp-for="@Model.Email">
                    </div>

                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Ana Sayfaya Dön</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
