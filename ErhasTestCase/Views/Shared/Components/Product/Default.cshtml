@using Entities
@model List<Product>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Stok Kodu</th>
            <th>Kategori Adı</th>
            <th>Marka Adı</th>
            <th>Fiyat</th>
            <th>Sepete Ekle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.StockCode</td>
                <td>@product.Category.Name</td>
                <td>@product.Brand.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td><button class="btn btn-info" onclick="addToBasket('@product.Id')">Sepete Ekle</button></td>
            </tr>
        }
    </tbody>
</table>
